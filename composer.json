{
    "name": "lunistore/native-magento-driver",
    "description": "A Magento driver for Akeneo PIM",
    "type": "library",
    "require-dev": {
        "akeneo/pim-community-dev": "1.4.*",
        "phpspec/phpspec": "~2.0",
        "fzaninotto/faker": "dev-master",
        "phpunit/phpunit": "^5.2",
        "phpunit/dbunit": ">=1.2",
        "fabpot/php-cs-fixer": "^1.11"
    },
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "GrÃ©gory Planchat",
            "email": "gregory@luni.fr"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5",
        "league/flysystem": "1.0.*",
        "doctrine/dbal": "~2.2"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/akeneo/pim-community-dev.git",
            "branch": "master"
        },
        {
            "type": "vcs",
            "url": "https://github.com/akeneo/platform.git",
            "branch": "master"
        },
        {
            "type": "vcs",
            "url": "https://github.com/fzaninotto/Faker.git",
            "branch": "master"
        }
    ],
    "autoload": {
        "psr-4": {
            "Luni\\Component\\MagentoDriver\\": "src/MagentoDriver/",
            "Luni\\Component\\MagentoMapper\\": "src/MagentoMapper/",
            "Luni\\Component\\MagentoSerializer\\": "src/MagentoSerializer/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "unit\\Luni\\Component\\MagentoDriver\\": "unit/Luni/Component/MagentoDriver/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
